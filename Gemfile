source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

gem 'faye'
gem 'thin'

gem 'will_paginate', '~> 3.0'

gem 'render_anywhere', :require => false

# Use mysql as the database for Active Record
gem 'mysql2', '0.3.16'

# Use SCSS for stylesheets
gem 'sass-rails', '4.0.3'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '4.0.1'

# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails', '3.1.0'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

# Haml is a templating engine for HTML. It's designed to make it both easier and more pleasant to write HTML documents.
gem 'haml', '4.0.5'

# Whenever provides a clear syntax for writing and deploying cron jobs.
gem 'whenever', :require => false

# Devise is a flexible authentication solution for Rails based on Warden.
gem 'devise', '3.2.4'

# UUIDTools is a simple library for generating any of the various types of UUIDs.
gem 'uuidtools'

# OTP toolbox
gem 'rotp', '1.6.1'

# SimpleCaptcha is the simplest and a robust captcha plugin.
gem 'simple_captcha', :git => 'git://github.com/galetahub/simple-captcha.git'

# Countries is a collection of all sorts of useful information for every country in the ISO 3166 standard. 
gem 'countries', '0.9.3'

# Phony gem normalizes, formats and splits E164 phone numbers.
gem 'phony', '2.2.16'

# ActiveScaffold provides a quick and powerful user interfaces for CRUD operations.
gem 'active_scaffold', '3.4.1'

# Addressable is a replacement for the URI implementation that is part of Ruby's standard library.
gem 'addressable', '2.3.6'

gem 'unicorn'
gem 'bootstrap-sass'
