
.container
  .row-fluid
    .col-xs-12.col-sm-12.col-md-10.col-md-offset-2.col-lg-10.col-lg-offset-2
      %h1 FORGOT YOUR PASSWORD?


.container
  .row-fluid.margin-20
    .col-xs-12.col-sm-12.col-md-8.col-lg-8
    
      = form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: {class: "form-horizontal", role: "form"}) do |f|
            
        .form-group
          = f.label :email, class: "col-md-4 control-label"
          .col-md-5
            = f.email_field :email, autofocus: true, class: "form-control"
      
        .form-group
          .col-md-offset-4.col-md-5
            = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg'
    
    .col-xs-12.col-sm-12.col-md-4.col-lg-4
      = render "devise/shared/links"

